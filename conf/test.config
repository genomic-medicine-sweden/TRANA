/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run genomic-medicine-sweden/taco -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}


params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    input                      = params.pipelines_testdata_base_path + 'samplesheet.csv'
    db                         = 'https://github.com/nf-core/test-datasets/raw/refs/heads/modules/data/genomics/prokaryotes/streptococcus_agalactiae/genome/emu.tar.gz'
    krona_taxonomy_tab         = 'https://github.com/genomic-medicine-sweden/test-datasets/raw/refs/heads/16s/taxonomy/taxonomy.tab'
}

env {
    PYTHONWARNINGS = "ignore::DeprecationWarning,ignore::FutureWarning"
}

